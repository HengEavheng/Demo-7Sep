name: ML Model CI/CD

on:
  push:
    branches: [ main ]

jobs:
  set-up-env:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Code
        uses: actions/checkout@v2

      - name: Set Up Python
        uses: actions/setup-python@v2
        with:
          python-version: 3.8

      - name: Install Dependencies
        run: |
          pip install scikit-learn==1.0.2
          pip install pytest==7.1.2
          pip install joblib==1.1.0
          pip install dvc==2.10.2
